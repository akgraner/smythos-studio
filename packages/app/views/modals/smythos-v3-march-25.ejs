<script>
  document.addEventListener('DOMContentLoaded', () => {
    const checkAndShowSmythosV3March25Modal = () => {
      const now = new Date();
      const startDate = new Date('2025-03-20'); // 20 Mar 2025
      const endDate = new Date('2025-03-31'); // 31 Mar 2025

      if (now >= startDate && now <= endDate) {
        const hasSeenModal = localStorage.getItem('smythosV3March25ModalSeen');

        if (!hasSeenModal) {
          const modal = document.getElementById('smythos-v3-march-25');
          const path = window.location.pathname;
          // not show on onboarding page
          if (modal && !path.includes('/welcome')) {
            modal.classList.remove('hidden');
            localStorage.setItem('smythosV3March25ModalSeen', 'true');
          }
        }
      }
    };

    window.closeSmythosV3March25Modal = () => {
      const modal = document.getElementById('smythos-v3-march-25');
      if (modal) {
        modal.classList.add('hidden');
      }
    };

    setTimeout(checkAndShowSmythosV3March25Modal, 1000);
  });
</script>
